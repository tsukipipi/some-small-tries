#include<iostream>
#include<string>
using namespace std;
int main()
{
    string time;
    int a;
    cout<<"Please input the time which you want to convert to military time:";
    cin>>time;
    if(time[8]=='P')//如果是PM，将时间加上12，改变第一和二两个字符
    {
        a=(time[0]-48)*10+(time[1]-48)+12;
        time[0]=a/10+48;
        time[1]=a%10+48;
    }
    time[8]='\0';   //消去PM或AM两个字符
    time[9]='\0';
    cout<<"The time change into:"<<time<<endl;
    return 0;
}
